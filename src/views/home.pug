doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ZZoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 ZZoom
        main
            div#room
                form
                    input(type="text", placeholder="방 이름을 입력하세요", required)
                    button 방 입장
            div#video
                video#myVideo(autoPlay, playsinline, width="400", height="400")
                select#cameras
                button#camera 카메라 끄기
                button#mute 음소거
                video#peerVideo(autoPlay, playsinline, width="400", height="400")
        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js")